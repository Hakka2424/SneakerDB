<!DOCTYPE html>
<html>
  <head>
    <!-- Character encoding -->
    <meta charset="utf-8" />
    <!-- Responsive viewport -->
    <meta 
      name="viewport" 
      content="width=device-width, initial-scale=1, shrink-to-fit=no" 
    />
    <!-- Page title -->
    <title>Add a Sneaker</title>
    <!-- Bootstrap CSS for styling -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
  </head>
  <!-- Light background for the whole page -->
  <body class="bg-light">
    <!-- Main container with top margin -->
    <div class="container mt-5">
      <!-- Card with subtle shadow -->
      <div class="card shadow-sm">
        <!-- Card header -->
        <div class="card-header">
          <h3 class="mb-0">Add a New Sneaker</h3>
        </div>
        <!-- Card body containing the form -->
        <div class="card-body">
          <!-- Form submits via POST to /sneaker -->
          <form method="post" action="/sneaker" novalidate>
            <!-- Name input -->
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="text"
                id="name"
                name="sneaker[name]"
                class="form-control"
                placeholder="e.g. Air Jordan 1"
                required
              />
            </div>

            <!-- Size input -->
            <div class="form-group">
              <label for="size">Size</label>
              <input
                type="number"
                id="size"
                name="sneaker[size]"
                class="form-control"
                placeholder="e.g. 9"
                min="1"
                required
              />
            </div>

            <!-- Price input -->
            <div class="form-group">
              <label for="price">Price ($)</label>
              <input
                type="number"
                id="price"
                name="sneaker[price]"
                class="form-control"
                placeholder="e.g. 150"
                step="0.01"
                min="0"
                required
              />
            </div>

            <!-- Release date input -->
            <div class="form-group">
              <label for="releaseDate">Release Date</label>
              <input
                type="date"
                id="releaseDate"
                name="sneaker[releaseDate]"
                class="form-control"
                required
              />
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary">Submit</button>
            <!-- Link back to collection page -->
            <a href="/collection" class="btn btn-secondary ml-2">View Collection</a>
          </form>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS (for dropdowns, modals, etc.) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
