<!DOCTYPE html>
<html>
  <head>
    <title>Sneaker Collection</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <style>
      body { background-color: #f8f9fa; padding: 20px; }
      .card { margin-bottom: 20px; }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="my-4 text-center">Sneaker Collection</h1>

      <!-- Add & Search Buttons -->
      <div class="mb-4 text-center">
        <a href="/form"  class="btn btn-success mr-2">Add Sneaker</a>
        <a href="/query" class="btn btn-primary">Search Sneakers</a>
      </div>

      <div class="row">
        <% sneakers.forEach(function(sneaker) { %>
          <div class="col-md-4">
            <div class="card">
              <!-- (optional image slot here) -->
              <div class="card-body">
                <h5 class="card-title"><%= sneaker.name %></h5>
                <p class="card-text">
                  <strong>Size:</strong> <%= sneaker.size %><br>
                  <strong>Price:</strong> $<%= sneaker.price %><br>
                  <strong>Released:</strong> <%= new Date(sneaker.releaseDate).toDateString() %>
                </p>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
